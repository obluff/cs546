<body>
    <main>
      <h1> create a homie </h1>
      <div>
      <form id="createPet" action="/createPet" method="post">
        <label>pet name:</label>
        <input type="text" name="petName"  placeholder="pet name">
        <label>  </label>

        <select name="color" size="4" multiple>
          <option value="blue">blue</option>
          <option value="red">red</option>
          <option value="black">black</option>
          <option value="white">white</option>
        </select>
        <select name="species" size="4" multiple>
          <option value="homae">homae</option>
          <option value="boysknight">boysknight</option>
          <option value="chillary">chillary</option>
          <option value="jawesome">jawesome</option>
        </select>

        <button  type="submit">Submit</button>
      </form>
      </div>
      <h4> {{text}} </h4>
    </main>
</body>
